#include<iostream>
using namespace std;

int getMin(int num[], int n){

     int mini = INT_MAX;

     for(int i=0; i<n; i++){
        mini = min(mini;num[i])
     }

     return mini;

}

int getMax(int num[], int n){

    int maxi = INT_MIN;

    for(int i=0; i<n; i++){
        maxi = max(maxi;num[i])
    }
    return maxi;

}

int main(){
    int size;

    cout<<"Enter the size of array"<<endl;
    cin>>size;

    int num[500];
    for (int i=0; i<size; i++){
        cin>>num[i];
    }

    cout<<"maximum value in array is "<<getMax(num,size)<<endl;
    cout<<"minimum value in array is "<<getMin(num,size)<<endl;

    return 0;


}
